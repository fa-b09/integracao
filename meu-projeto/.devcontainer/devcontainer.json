{
    "name": "Java e COBOL Environment",
    "image": "mcr.microsoft.com/devcontainers/java:17",
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y gnucobol",
    "customizations": {
        "vscode": {
            "extensions": [
                "vscobol.cobol",
                "vscjava.vscode-java-pack"
            ]
        }
    }
}
